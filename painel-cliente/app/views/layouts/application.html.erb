<!DOCTYPE html>
<html class="ls-theme-light-blue">
  <head>
    <title>PainelCliente</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <!-- CSS -->
    <link href="http://assets.locaweb.com.br/locastyle/3.10.1/stylesheets/locastyle.css" rel="stylesheet" type="text/css">
    <link rel="icon" sizes="192x192" href="/locawebstyle/assets/images/ico-boilerplate.png">
    <link rel="apple-touch-icon" href="/locawebstyle/assets/images/ico-boilerplate.png">
  </head>

  <body>

    <%= render 'layouts/nav' %>

    <% if flash[:notice] %>
        <div class="ls-alert-success ls-dismissable ls-flash-errors">
            <div data-ls-module="dismiss" class="notice ls-dismiss"><%= notice %></div>
        </div>
    <% end %> 
    <% if flash[:alert]%>
        <div class="ls-alert-danger ls-dismissable ls-flash-errors">
            <div data-ls-module="dismiss" class="alert ls-dismiss"><%= alert %></div>
        </div>
    <% end %>
  
    <% if user_signed_in? %>
      <%= render 'layouts/sidebar' %>  
      <main class="ls-main">
        <div class="container-fluid">
            <%= yield %>
        </div>
        <%= render 'layouts/footer' %>
      </main>
   <% else %>
    <%= yield %>
   <% end %>

    <script src="//code.jquery.com/jquery-2.1.4.min.js" type="text/javascript"></script>
    <script src="http://assets.locaweb.com.br/locastyle/3.10.1/javascripts/locastyle.js" type="text/javascript"></script>
    

    <script type="text/javascript">
      $(window).on('load', function() {
        locastyle.browserUnsupportedBar.init();
      });
    </script>
  </body>
</html>
