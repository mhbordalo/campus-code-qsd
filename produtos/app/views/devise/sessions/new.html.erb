<h1 class="ls-login-logo">
  Aplicativo de Produtos
</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ls-form ls-login-form'}) do |f| %>
  
  <div class="ls-label">
    <%= f.label :email, 'E-mail', class: "ls-label-text ls-hidden-accessible" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "ls-login-bg-user ls-field-lg" %>
  </div>

  <div class="ls-label">
    <%= f.label :password, 'Senha', class: "ls-label-text ls-hidden-accessible" %>
    <div class="ls-prefix-group ls-field-lg">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Senha", class: "ls-login-bg-password", id: "password_field" %>
      <a class="ls-label-text-prefix ls-toggle-pass ls-ico-eye" data-toggle-class="ls-ico-eye, ls-ico-eye-blocked" data-target="#password_field" href="#"></a>
    </div>
  </div>
  <p><%= link_to "Esqueci minha senha", new_password_path(resource_name), class:"ls-login-forgot" %></p>
  
  <div class="actions">
    <%= f.submit "Entrar",  class: "ls-btn-primary ls-btn-block ls-btn-lg" %>
  </div>
<% end %>

