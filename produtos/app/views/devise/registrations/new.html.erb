<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'ls-form ls-login-form'}) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="ls-label">
    <%= f.label :name, 'Nome', class: "ls-label-text ls-hidden-accessible" %> <br />
    <%= f.text_field :name, autofocus: true, autocomplete: "nome", placeholder: "Nome", class: "ls-login-bg-user ls-field-lg" %>
  </div>

  <div class="ls-label">
    <%= f.label :email, 'E-mail', class: "ls-label-text ls-hidden-accessible" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "ls-login-bg-user ls-field-lg" %>
  </div>

  <div class="ls-label">
    <%= f.label :password, 'Senha', class: "ls-label-text ls-hidden-accessible" %>
    <div class="ls-prefix-group ls-field-lg">
      <%= f.password_field :password, autocomplete: "password", placeholder: "Senha", class: "ls-login-bg-password", id: "password_field" %>
      <a class="ls-label-text-prefix ls-toggle-pass ls-ico-eye" data-toggle-class="ls-ico-eye, ls-ico-eye-blocked" data-target="#password_field" href="#"></a>
    </div>
  </div>

  <div class="ls-label">
    <%= f.label :password_confirmation, class: "ls-label-text ls-hidden-accessible" %>
    <div class="ls-prefix-group ls-field-lg">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme a senha", class: "ls-login-bg-password", id: "revocery_password_field" %>
      <a class="ls-label-text-prefix ls-toggle-pass ls-ico-eye" data-toggle-class="ls-ico-eye, ls-ico-eye-blocked" data-target="#revocery_password_field" href="#"></a>
      </div>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", class: "ls-btn-primary ls-btn-block ls-btn-lg" %>
  </div>

  <p class="ls-txt-center">Volte para o <%= link_to "login", user_session_path %> </p>
<% end %>
